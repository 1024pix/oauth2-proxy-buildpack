#!/usr/bin/env bash

set -eo pipefail

OAUTH2_PROXY_VERSION="v5.1.0"
OAUTH2_PROXY_CHECKSUM="0362b9a951200084e68d75c9937e774ccf7412ea1ef59d96b214686a55a489f4"

BP_DIR="$(cd $(dirname "$0"); pwd)"
BUILD_DIR="$1"

mkdir -p "$BUILD_DIR/bin"

echo "downloading oauth2_proxy..."
wget --no-verbose "https://github.com/pusher/oauth2_proxy/releases/download/${OAUTH2_PROXY_VERSION}/oauth2_proxy-${OAUTH2_PROXY_VERSION}.linux-amd64.go1.14.tar.gz"
mv oauth2_proxy-*.tar.gz oauth2_proxy.tar.gz
echo "$OAUTH2_PROXY_CHECKSUM  oauth2_proxy.tar.gz" | sha256sum -c -
tar -xzf oauth2_proxy.tar.gz -C "$BUILD_DIR/bin" --strip-components=1
rm oauth2_proxy.tar.gz

# write out a start script
cp "${BP_DIR}"/../scripts/start_*.sh "${BUILD_DIR}/bin"
